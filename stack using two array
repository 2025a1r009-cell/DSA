#include <stdio.h>
#include<stdlib.h>
#define MAX 100

int stack1[MAX], stack2[MAX];
int top1 = -1, top2 = -1;
void push(int s, int x) {
    if (s == 1) {
        if (top1 == MAX - 1) {
            printf("Overflow\n");
        } else {
            stack1[++top1] = x;
        }
    } 
    else if (s == 2) {
        if (top2 == MAX - 1) {
            printf("Overflow\n");
        } else {
            stack2[++top2] = x;
        }
    }
}
void pop(int s) {
    if (s == 1) {
        if (top1 == -1) {
            printf("Underflow\n");
        } else {
            top1--;
        }
    } 
    else if (s == 2) {
        if (top2 == -1) {
            printf("Underflow\n");
        } else {
            top2--;
        }
    }
}
void peek(int s) {
    if (s == 1) {
        if (top1 == -1) {
            printf("Underflow\n");
        } else {
            printf("%d\n", stack1[top1]);
        }
    } 
    else if (s == 2) {
        if (top2 == -1) {
            printf("Underflow\n");
        } else {
            printf("%d\n", stack2[top2]);
        }
    }
}
void display(int s) {
    if (s == 1) {
        if (top1 == -1) {
            printf("Underflow\n");
        } else {
            for (int i = top1; i >= 0; i--) {
                printf("%d ", stack1[i]);
            }
            printf("\n");
        }
    } 
    else if (s == 2) {
        if (top2 == -1) {
            printf("Underflow\n");
        } else {
            for (int i = top2; i >= 0; i--) {
                printf("%d ", stack2[i]);
            }
            printf("\n");
        }
    }
}
int main() {
    int choice, s, x;

    while (1) {
        printf("\n1.PUSH  2.POP  3.PEEK  4.DISPLAY  5.EXIT\n");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter stack number (1 or 2) and value: ");
                scanf("%d %d", &s, &x);
                push(s, x);
                break;

            case 2:
                printf("Enter stack number (1 or 2): ");
                scanf("%d", &s);
                pop(s);
                break;

            case 3:
                printf("Enter stack number (1 or 2): ");
                scanf("%d", &s);
                peek(s);
                break;

            case 4:
                printf("Enter stack number (1 or 2): ");
                scanf("%d", &s);
                display(s);
                break;

            case 5:
                return 0;

            default:
                printf("Invalid choice\n");
        }
    }
}
